<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Tomar foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnFoto" tools:layout_editor_absoluteY="277dp"
            tools:layout_editor_absoluteX="32dp" app:icon="@android:drawable/ic_menu_camera"
            android:background="#4F000000" android:textColor="#0B0A0A" app:iconTint="#000000"
            tools:ignore="MissingConstraints"/>
    <Button
            android:text="Cargar imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnImagen" tools:layout_editor_absoluteY="277dp"
            tools:layout_editor_absoluteX="211dp" app:icon="@android:drawable/ic_menu_gallery"
            android:background="#4F000000" android:textColor="#0B0A0A" app:iconTint="#000000"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="En esta aplicación podrás cargar una imagen, la cual sera segmentada usando el algoritmo de K-means clustering"
            android:layout_width="311dp"
            android:layout_height="67dp" android:id="@+id/textView" tools:layout_editor_absoluteY="126dp"
            tools:layout_editor_absoluteX="50dp" android:fontFamily="sans-serif" android:textSize="14sp"
            android:textAlignment="center" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Segmentación de imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" tools:layout_editor_absoluteY="90dp"
            tools:layout_editor_absoluteX="89dp" android:fontFamily="sans-serif-black" android:textSize="20sp"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>