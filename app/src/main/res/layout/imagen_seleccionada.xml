<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/imgSeleccionada"
                                                   android:layout_gravity="center|center_horizontal|center_vertical">

    <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_revert"
            android:textColor="#C14C4C4C" app:iconTint="#C14C4C4C" android:background="#00FFFFFF"
            tools:ignore="MissingConstraints"
            android:onClick="onClick" tools:text="Regresar" android:translationY="63sp" android:translationX="10sp"
            android:text="@string/btnAtras"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="208dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="116dp"/>
    <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_send"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="onClick" android:text="@string/btnSiguiente" android:translationY="63sp"
            android:translationX="50sp" android:layout_marginEnd="78dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="116dp"/>
    <ImageView
            android:layout_width="381dp"
            android:layout_height="405dp"
            android:id="@+id/imgView"
            tools:ignore="MissingConstraints"
            android:translationY="130dp" android:translationX="14sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="24sp" android:textColor="#2E2D2D"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="43dp" tools:text="Imagen cargada"/>
</androidx.constraintlayout.widget.ConstraintLayout>